{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "declaration": true,                  
    "declarationDir": "./dist/types",
    "outDir": "./dist",  
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",    
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}